        padding: 0 20px;
      }

      .location-card {
        background: #fff;
        border-radius: 10px;
        padding: 1.5rem;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
      }

      .location-card:hover {
        transform: translateY(-5px);
      }

      .location-card h3 {
        color: #2c3e50;
        margin-bottom: 1rem;
        font-size: 1.3rem;
      }

      .location-card p {
        margin-bottom: 0.5rem;
        color: #555;
      }

      .contact-info {
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid #eee;
      }

      .contact-info a {
        color: #e74c3c;
        text-decoration: none;
        font-weight: bold;
      }

      /* Responsive Design */
      @media (max-width: 768px) {
        .page-title {
          font-size: 2rem;
        }

        .locations-grid {
          grid-template-columns: 1fr;
          padding: 0;
        }
      }

      @media (max-width: 480px) {
        .mobile-menu {
          display: block;
        }

        .location-card {
          padding: 1rem;
        }
      }
    </style>
